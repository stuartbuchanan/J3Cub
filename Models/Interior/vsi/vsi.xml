<?xml version="1.0"?>

<PropertyList>

    <path>vsi.ac</path>

    <effect>
        <inherits-from>../../Effects/interior/j3cub-interior</inherits-from>
        <object-name>Face</object-name>
        <object-name>bezelinside</object-name>
        <object-name>bezeloutside</object-name>
        <object-name>visses</object-name>
    </effect>

    <effect>
        <inherits-from>../../Effects/interior/j3cub-flashlight</inherits-from>
        <object-name>PointerTip</object-name>
        <object-name>PointerCentre</object-name>
        <object-name>PointerTip</object-name>
    </effect>

    <effect>
        <inherits-from>../../Effects/interior/interior-glass-reflection-panel-front</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>Face</object-name>
        <object-name>PointerTip</object-name>
        <emission>
            <red>1.0</red>
            <green>0.2</green>
            <blue>0.0</blue>
            <factor-prop>sim/model//material/instruments/factor</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>PointerCentre</object-name>
        <object-name>PointerTip</object-name>
        <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
        <interpolation>
            <entry>
                <ind>-2000</ind>
                <dep>-176</dep>
            </entry>
            <entry>
                <ind>-1500</ind>
                <dep>-133</dep>
            </entry>
            <entry>
                <ind>-1000</ind>
                <dep>-88</dep>
            </entry>
            <entry>
                <ind>-500</ind>
                <dep>-44</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>500</ind>
                <dep>44</dep>
            </entry>
            <entry>
                <ind>1000</ind>
                <dep>88</dep>
            </entry>
            <entry>
                <ind>1500</ind>
                <dep>133</dep>
            </entry>
            <entry>
                <ind>2000</ind>
                <dep>176</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

</PropertyList>
